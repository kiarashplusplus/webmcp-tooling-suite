{
  "name": "@25xcodes/llmfeed-validator",
  "version": "1.2.0",
  "description": "LLMFeed validation library with Ed25519 signature verification",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "llmfeed-validate": "./bin/llmfeed-validate.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llmfeed",
    "mcp",
    "webmcp",
    "validator",
    "ed25519",
    "ai-agents",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiarashplusplus/webmcp-tooling-suite.git",
    "directory": "packages/validator"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "@noble/ed25519": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@noble/ed25519": {
      "optional": true
    }
  }
}